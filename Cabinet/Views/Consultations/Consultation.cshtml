                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                        <div class="e-float-input">
                            <input required="" type="text" asp-for="Radiologique">
                            <span class="e-float-line"></span>
                            <label class="e-float-text" asp-for="Radiologique">Examens Radiologiques: </label>
                        </div>
                    </div>
                </div>
            </div>

            <div id="nested6" style="display: none">
                <div class="row">
                    <div>
                        <input required="" type="hidden" asp-for="Id">
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                        <div class="e-float-input">
                            <input required="" type="text" asp-for="Diagnostic">
                            <span class="e-float-line"></span>
                            <label class="e-float-text" asp-for="Diagnostic">Diagnostics: </label>
                        </div>
                    </div>
                </div>
            </div>

            <div id="nested7" style="display: none">
                @await Html.PartialAsync("../Shared/Consultations/_ThearapiePartial.cshtml", Model)
            </div>

            <div id="nested8" style="display: none">
                <div class="row">
                    <div>
                        <input required="" type="hidden" asp-for="Id">
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                        <div class="e-float-input">
                            <input required="" type="text" asp-for="Synthèse">
                            <span class="e-float-line"></span>
                            <label class="e-float-text" asp-for="Synthèse">Synthèse: </label>
                        </div>
                    </div>
                </div>
            </div>

            <div id="nested9" style="display: none">
                <div class="row">
                    <div>
                        <input required="" type="hidden" asp-for="Id">
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                        <div class="e-float-input">
                            <input required="" type="text" asp-for="NextRDV">
                            <span class="e-float-line"></span>
                            <label class="e-float-text" asp-for="NextRDV">Prochain RDV.: </label>
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <div class="row">
            <div class="col-md-1 offset-md-11">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>



