                            <label class="e-float-text" asp-for="Anamnese">Anamnese: </label>
                        </div>
                    </div>
                </div>
            </div>

            <div id="nested2" style="display: none">
                @await Html.PartialAsync("../Shared/Consultations/_MensurationsPartial.cshtml", Model)
            </div>

            <div id="nested30" style="display: none">
                @await Html.PartialAsync("../Shared/Consultations/_ExaminationsPartial.cshtml", Model)
            </div>

            <div id="nested4" style="display: none">
                <div class="row">
                    <div>
                        <input required="" type="hidden" asp-for="Id">
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                        <div class="e-float-input">
                            <input required="" type="text" asp-for="Biologique">
                            <span class="e-float-line"></span>
                            <label class="e-float-text" asp-for="Biologique">Examens biologiques: </label>
                        </div>
                    </div>
                </div>
            </div>

            <div id="nested5" style="display: none">
