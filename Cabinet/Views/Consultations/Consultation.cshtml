    <Form asp-controller="Consultations" asp-action="Consultation" method="post">
        <ejs-accordion id="ParentNested" expandMode="Multiple">
            <e-accordion-accordionitems>
                <e-accordion-accordionitem header="ANAMNÈSE" content='#nested1' expanded="false"></e-accordion-accordionitem>
                <e-accordion-accordionitem header="MENSURATIONS" content='#nested2' expanded="false"></e-accordion-accordionitem>
                <e-accordion-accordionitem header="EXAMENS" content='#nested30' expanded="true"></e-accordion-accordionitem>
                <e-accordion-accordionitem header="EXAMENS BIOLOGIQUES" content='#nested4' expanded="false"></e-accordion-accordionitem>
